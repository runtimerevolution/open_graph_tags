<% # Open Graph %>
<% 	prefix = main_app.root_url[0..-2]
		url = prefix + url unless url.nil?
		image = prefix + image_path(image) unless image.blank? %>

<%= facebook_meta_tag :site_name, site_name %>
<%= facebook_meta_tag :title, title %>
<%= facebook_meta_tag :url, url %>
<%= facebook_meta_tag :description, description %>
<%= facebook_meta_tag :image, image %>

<% # Twitter %>
<%= twitter_meta_tag :url, url %>
<%= twitter_meta_tag :title, title %>
<%= twitter_meta_tag :description, description %>

<% #-- Google meta tags for better search display %>
<%= google_meta_tag :name, site_name %>
<%= google_meta_tag :description, description %>